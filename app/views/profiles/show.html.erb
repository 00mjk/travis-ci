<%- content_for(:body_id, 'profile') -%>

<h2><%= @user.name %></h2>
<%= gravatar(@user) %>

<dl class="profile">
  <dt>
    <%= t '.github' %>:
  </dt>
  <dd>
    <%= link_to "#{@user.login}", "http://github.com/#{@user.login}" %>
  </dd>
  <% if @user.email.present? %>
    <dt>
      <%= t '.email' %>:
    </dt>
    <dd>
      <%= @user.email %>
    </dd>
  <% end %>
  <dt>
    <%= t '.token' %>:
  </dt>
  <dd>
    <%= @user.tokens.first.token %>
  </dd>
</dl>

<%= form_tag("profile", :method => :put) do %>
  <h4>
    <%= t '.your_locale' %>
  </h4>
  <%= select "user", "locale", I18n.available_locales.collect { |locale| [t("locales.#{locale}"), locale] }, {:include_blank => true, :selected => @user.locale } %>
  <%= submit_tag(t('.update_locale')) %>
<% end %>

