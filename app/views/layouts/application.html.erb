<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <meta name="csrf-token" content="<%= form_authenticity_token %>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/favicon.ico">

    <%= render :partial => 'layouts/assets' %>

    <%= yield :head %>
  </head>

  <body id="<%= body_id %>">
    <%= render 'layouts/top' %>
    <%= render 'layouts/left' %>

    <div id="main">
      <div id="flash">
      <% if broadcast %><ul><li><%= broadcast.message.html_safe %></li></ul><% end %>
      </div>
      <%= yield %>
    </div>

    <%= render 'layouts/right' %>
    <%= render 'layouts/google_analytics' %>
    <%= javascript_tag "var pusher = new Pusher('#{Travis.config.pusher.key}');" unless Rails.env.jasmine? %>
  </body>
</html>
